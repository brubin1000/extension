{
  "manifest_version": 3,
  "name": "ATMS",
  "version": "1.0.0",
  "description": "Artist Tour Management System - AI-powered email to calendar event creation",
  
  "permissions": [
    "identity",
    "storage",
    "alarms",
    "notifications",
    "activeTab",
    "sidePanel"
  ],
  
  "host_permissions": [
    "https://www.googleapis.com/*",
    "https://gmail.googleapis.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://mail.google.com/*",
    "https://*.mongodb.com/*",
    "https://*.mongodb-realm.com/*"
  ],
  
  "background": {
    "service_worker": "dist/service-worker.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content/gmail-inject.js"],
      "run_at": "document_idle"
    }
  ],
  
  "side_panel": {
    "default_path": "panel/panel.html"
  },
  
  "oauth2": {
    "client_id": "556157070508-f73pq99a2kc8vqeetrrgcvbe77se7tn6.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.readonly",
      "https://www.googleapis.com/auth/calendar.events",
      "https://www.googleapis.com/auth/calendar.readonly",
      "openid",
      "email",
      "profile"
    ]
  },
  
  "action": {
    "default_title": "ATMS"
  }
}
